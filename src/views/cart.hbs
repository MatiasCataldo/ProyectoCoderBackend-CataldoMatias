                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-3">
                      <h6 class="text-muted">Producto</h6>
                      <h6 class="text-black mb-0">{{this.productName}}</h6>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                      <h6 class="text-muted">Precio Unidad</h6>
                      <h6 class="mb-0">$ {{this.productPrice}}</h6>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                      <h6 class="text-muted">Cantidad</h6>
                      <h6 class="mb-0">{{this.quantity}}</h6>
                    </div>
                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                      <a href="#" class="text-muted delete-item" data-userid="{{userId}}"
                        data-productid="{{productId}}">
                        <i class="fas fa-times"></i>
                      </a>
                    </div>
                  </div>
                  {{/each}}

                  <hr class="my-4">

                  <div class="pt-5">
                    <h6 class="mb-0"><a href="/home/user" class="text-body"><i
                          class="fas fa-long-arrow-alt-left me-2"></i>Volver a Inicio</a></h6>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 bg-grey d-flex align-items-end">
                <div class="p-5" style="display: grid; width: 100%;">
                  <h5 class="text-uppercase mb-3">Envio</h5>
                  <div class="mb-4 pb-2">
                    <select data-mdb-select-init>
                      <option value="1">Estandar a Domicilio- $5000.00</option>
                      <option value="2">Express a Domicilio- $10000.00</option>
                      <option value="3">Retiro en Local- Gratis</option>
                    </select>
                  </div>

                  <h5 class="text-uppercase mb-3">Codigo Descuento</h5>

                  <div class="mb-5">
                    <div data-mdb-input-init class="form-outline">
                      <input type="text" id="form3Examplea2" class="form-control form-control-lg" />
                      <label class="form-label" for="form3Examplea2">Enter your code</label>
                    </div>
                  </div>
                  <div class="d-flex justify-content-between mb-5">
                    <h5 class="text-uppercase">Precio Total:</h5>
                    <h5 id="totalPrice">$ 0.00</h5>
                  </div>
                  <script>
                    // Calcula el precio total
                    let totalPrice = 0;
                    {{#each cart.items}}
                    totalPrice += {{ this.productPrice }} * {{ this.quantity }};
                    {{/each}}
                        // Muestra el precio total en la interfaz
                        document.getElementById('totalPrice').innerText = "$ " + totalPrice.toFixed(2);
                  </script>

                  <!-- Unificado en un solo bot√≥n -->
                  <button id="purchase" type="button" class="btn btn-dark btn-block btn-lg">COMPRAR</button>

                  <!-- Formulario de checkout -->
                  <form id="checkout-form" action="/checkout/create-checkout-session" method="POST" style="display: none;">
                    <button type="submit" id="checkout-button">Checkout</button>
                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
